{
  "name": "logigator-simulation",
  "version": "0.1.0",
  "description": "Multi-Threaded C++ Node.JS Module for Simulating Logic Circuits.",
  "main": "index.js",
  "homepage": "https://github.com/logigator/logigator-simulation#readme",
  "bugs": {
    "url": "https://github.com/logigator/logigator-simulation/issues"
  },
  "scripts": {
    "build": "node-gyp build",
    "build-wasm": "run-script-os",
    "build-wasm:win32": "webAssembly\\build_win32.bat",
    "build-wasm:default": "bash webAssembly/build_unix.sh",
    "install": "node-gyp rebuild && run-script-os",
    "install:win32": "webAssembly\\install_win32.bat",
    "install:default": "bash webAssembly/install_unix.sh",
    "i:win32": "npm run install:win32",
    "i:default": "npm run install:default",
    "isntall:win32": "npm run install:win32",
    "isntall:default": "npm run install:default",
    "add:win32": "npm run install:win32",
    "add:default": "npm run install:default",
    "test": "node ./test.js"
  },
  "files": [
    "src",
    "webAssembly",
    "binding.gyp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logigator/logigator-simulation.git"
  },
  "author": "Andreas Schloessl",
  "license": "MIT",
  "gypfile": true,
  "devDependencies": {
    "node-gyp": "^6.0.0"
  },
  "dependencies": {
    "nan": "^2.14.0",
    "run-script-os": "^1.0.7"
  }
}
